                            time_estimate = "Calculating..."
                        
                        status_text.text(f"Evaluating sample {idx + 1} of {total_rows}")
                        time_info.text(f"‚è±Ô∏è {time_estimate} | Elapsed: {int(elapsed_time//60)}m {int(elapsed_time%60)}s")
                        
